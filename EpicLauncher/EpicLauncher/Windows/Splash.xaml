<Window x:Class="GCLauncher.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        AllowsTransparency="True"
        OpacityMask="White" 
        WindowStyle="None" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="Tela" Height="143.66" Width="233" ResizeMode="NoResize">
    <Grid>
        <Image Name="LogoImg" HorizontalAlignment="Left"  Height="148" Width="232" VerticalAlignment="Top" Source="/images/logo.png" Margin="0,-2,0,0" x:FieldModifier="public"/>
        <ProgressBar HorizontalAlignment="Left" Height="15" VerticalAlignment="Top" Width="232" x:Name="LauncherBarTotal" BorderBrush="{x:Null}" Value="80" Margin="0,128,0,0" Style="{StaticResource Bar3}"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Margin="0,127,0,0" TextWrapping="Wrap" Text="Checking files..." VerticalAlignment="Top" Name="splashText" Foreground="white" Width="233" x:FieldModifier="public" FontSize="8pt"/>
    </Grid>
</Window>
