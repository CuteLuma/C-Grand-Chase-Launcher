<Window x:Class="GCLauncher.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        AllowsTransparency="True"
        OpacityMask="White" 
        WindowStyle="None" 
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Title="Tela" Height="143" Width="314" ResizeMode="NoResize">
    <Grid>
        <Image Name="LogoImg" HorizontalAlignment="Center"  Height="93" Width="202" VerticalAlignment="Top" Source="/images/logo.png" x:FieldModifier="public"/>
        <ProgressBar HorizontalAlignment="Center" Height="25" Margin="0,117,0,0" VerticalAlignment="Top" Width="291" x:Name="LauncherBarTotal" BorderBrush="{x:Null}" Value="0" Style="{StaticResource Bar}"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Center" Text="Checking files..." Foreground="White" FontSize="8pt" Margin="0,100,0,29" Width="314" Height="14" Name="splashText">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="2"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
